@model NoteApp.WebUI.Models.ResetPasswordModel
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Reset Password</h5>
                    <form asp-controller="Sign" asp-action="ResetPassword" method="POST">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Token">
                        <div class="form-floating mb-3">
                            <label asp-for="Email" class="mb-2">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <span class="text-alert" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label asp-for="Password" class="mb-2">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <span class="text-alert" asp-validation-for="Password"></span>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-dark btn-login text-uppercase fw-bold w-100 mb-1 mt-3"
                                type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>